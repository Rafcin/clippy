{
  "name": "oxygen",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "[----[Build]----]": "",
    "build": "turbo run build",
    "[----[Dev]----]": "",
    "dev": "tsx watch src/index.ts",
    "[----[Lint/Format]----]": "",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "[----[Clean]----]": "",
    "clean": "turbo run clean && rimraf node_modules pnpm-lock.yaml && pnpm i",
    "nuke": "rm -r node_modules; for d in **/node_modules; do echo $d; rm -r $d; done",
    "[----[Update]----]": "",
    "update:all": "pnpm recursive exec ncu -u && pnpm recursive install"
  },
  "devDependencies": {
    "@types/eslint": "^8.37.0",
    "@types/node": "^18.15.13",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-next": "13.3.0",
    "is-ci": "^3.0.1",
    "npm-check-updates": "^16.10.9",
    "prettier": "latest",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.0",
    "tsup": "^6.7.0",
    "turbo": "^1.9.3",
    "typescript": "^5.0.4",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.53",
    "tsx": "3.12.6"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "dotenv-cli": "^7.2.1"
  },
  "packageManager": "pnpm@7.27.1"
}
