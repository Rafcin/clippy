{
  "name": "oxygen",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "[----[Build]----]": "",
    "build": "dotenv -- turbo run build --include-dependencies",
    "clippy:build": "dotenv -- turbo run build --filter=@oxygen/clippy --include-dependencies",
    "[----[Dev]----]": "",
    "dev": "dotenv -- turbo run dev --include-dependencies",
    "clippy:dev": "dotenv -- turbo run dev --filter=@oxygen/clippy",
    "[----[Lint/Format]----]": "",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "[----[Clean]----]": "",
    "clean": "turbo run clean && rimraf node_modules pnpm-lock.yaml && pnpm i"
  },
  "devDependencies": {
    "@types/eslint": "^8.37.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-next": "13.3.0",
    "is-ci": "^3.0.1",
    "prettier": "latest",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.0",
    "tsup": "^6.7.0",
    "turbo": "^1.9.2",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "dotenv-cli": "^7.2.1",
    "tsx": "^3.12.6"
  },
  "packageManager": "pnpm@7.27.1"
}
